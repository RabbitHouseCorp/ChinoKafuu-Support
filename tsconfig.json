{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./build/",
    "rootDir": ".",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "typeRoots": [
      "./@types/index.d.ts"
    ]
  },
  "include": [
    "src",
    "tsconfig.json",
    "@types"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
