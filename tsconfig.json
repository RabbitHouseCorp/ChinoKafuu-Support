{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./build/",
    "rootDir": "./src/",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": false
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
